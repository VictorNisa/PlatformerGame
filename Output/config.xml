<!-- Config file for the game -->

<config>
  <app framerateCap="30">
    <title>Hellbound</title>
    <organization>UPC</organization>
    
  </app>
  <renderer>
    <vsync value="false"/>
  </renderer>

  <window>
    <resolution width="1280" height="720" scale="1"/>
    <fullscreen value="false"/>
    <borderless value="false"/>
    <resizable value="false"/>
    <fullscreenWindow value="false"/>
  </window>

  <entities>
    <player>
      <acceleration x="100" y="180"/>
      <gravity value="50" />
      <speed x="0" y="10" />
      <maxSpeed x="325" y="400"/>
      <box w="46" h="61"/>
      <offset x="20"/>
    </player>
  </entities>
  
  <fileSystem>
    <path>data.zip</path>
    <loadTo>save_game.xml</loadTo>
    <saveTo>save_game.xml</saveTo>
  </fileSystem>

  <map>
    <folder>Assets/Maps/</folder>
    <division int="15"/>
  </map>

</config>